{% extends "../layouts/main-layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/css/product.css">
{% endblock %}

{% block content %}
 <main>
     {% if prods.length > 0 %}
        <div class="grid">
            {% for product in prods %}
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">{{product.title}}</h1>
                </header>
                <div class="card__image">
                    <img src="{% if product.imageUrl == ''%}https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png {%else %} {{product.imageUrl}} {%endif%}" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">{{product.price}}</h2>
                    <p class="product__description">{{product.description}}</p>
                </div>
                <div class="card__actions">
                    {{"./includes/add-to-cart.njk" | render({product: product})}}
                </div>
            </article>
            {% endfor %}
        </div>
        {% else %}
        <h1>No products found!</h1>
        {% endif %}
    </main>
{% endblock %}