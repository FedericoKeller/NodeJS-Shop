{% extends "../layouts/main-layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/css/orders.css">
{% endblock %}

{% block content %}
<main>
    {% if orders.length > 0 %}
    <ul class="orders">
       {%for order in orders%}
         <li class="orders__items">
            <h1># {{order._id}} - <a href="orders/{{order._id}}">Invoice</a></h1>
            <ul class="orders__products">
            {%for p in order.products%}
                <li class="orders__products-item">
                    {{p.product.title}} ({{p.quantity}})
                </li>
            {%endfor%}
            </ul>
        </li>
       {%endfor %}
    </ul>
    {% else %}
        <h1>No Orders!</h1>
    {%endif%}
</main>
{% endblock %}