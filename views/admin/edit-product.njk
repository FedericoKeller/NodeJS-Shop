{% extends "../layouts/main-layout.njk" %}
{% block styles %}
    <link rel="stylesheet" href="/css/forms.css">
        <link rel="stylesheet" href="/css/product.css">
        {% endblock %}
        {% block content %}
            <main>
                <form class="product-form" action="{% if editing %} /admin/edit-product {% else %} /admin/add-product {% endif %}" method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" value="{{ product.title if editing }}"></div>
                        <div class="form-control">
                            <label for="imageUrl">Image URL</label>
                            <input type="text" name="imageUrl" id="imageUrl" value="{{ product.imageUrl if editing }}"></div>
                            <div class="form-control">
                                <label for="price">Price</label>
                                <input type="text" name="price" id="price" step="0.01" value="{{ product.price if editing }}"></div>
                                <div class="form-control">
                                    <label for="description">Description</label>
                                    <textarea name="description" id="description" rows="5">{{ product.description if editing }}</textarea>
                                </div>
                                {% if editing %}
                                    <input type="hidden" value="{{ product._id }}" name="productId">
                                    {% endif %}
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                        <button class="btn" type="submit">
                                            {% if editing %}
                                                Update Product
                                            {% else %}
                                                Add Product{% endif %}
                                        </button>
                                    </form>
                                </main>
                            {% endblock %}